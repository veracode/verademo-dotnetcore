<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/css/pwm.css" />

    <script src="~/lib/html5shiv.min.js"></script>
    <script src="~/lib/respond.min.js"></script>
</head>
<body role="document">
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <!-- <li role="presentation" id="nav-Reset-Reset"><a asp-controller="Reset" asp-action="Reset">Reset</a></li> -->
                    <li role="presentation" id="nav-Account-Login"><a asp-controller="Account" asp-action="Login">Login</a></li>
                    <li role="presentation" id="nav-Account-Register"><a asp-controller="Account" asp-action="Register">Register</a></li>
                </ul>
            </nav>
            <img src="~/images/Tokyoship_Talk_icon.svg" height="100" width="100">
        </div>
    </div>

    <div class="container theme-showcase" role="main">
        @RenderBody()
    </div>

    <script src="~/lib/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script>
        $("li#nav-@(ViewContext.RouteData.Values["Controller"])-@(ViewContext.RouteData.Values["Action"])").addClass("active");
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
